<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mappa a schermo intero (Mapbox MapView) -->
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraTargetLat="0"
        app:mapbox_cameraTargetLng="0"
        app:mapbox_cameraZoom="17.0" />

    <!-- Contenitore per i tooltip dinamici (es. profili, eventi) -->
    <FrameLayout
        android:id="@+id/tooltipContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false" />

    <!-- Contenitore visibile solo quando viene aperto il profilo -->
    <FrameLayout
        android:id="@+id/profileFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Contenitore visibile solo durante la chat evento -->
    <FrameLayout
        android:id="@+id/chatFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Contenitore visibile solo in modifica o creazione evento -->
    <FrameLayout
        android:id="@+id/eventFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Navigazione inferiore (menu a 4 icone) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

    <!-- Icona trascinabile per creare un evento (sopra tutto) -->
    <ImageView
        android:id="@+id/draggableEventIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        android:src="@drawable/ic_event_marker"
        android:contentDescription="Trascina per creare evento"
        android:translationZ="100dp" />

</FrameLayout>