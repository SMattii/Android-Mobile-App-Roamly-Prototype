<!-- Layout principale che occupa tutto lo schermo -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".activity.MakeProfile4Activity">

    <!-- Titolo nella parte superiore dello schermo -->
    <!-- Mostra un messaggio per indicare all’utente che sta completando il proprio profilo -->
    <TextView
        android:id="@+id/titleText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete your profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenitore centrale con due card -->
    <!-- Contiene due blocchi separati: uno per la “vibe” e uno per la visibilità sulla mappa -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleText4"
        app:layout_constraintBottom_toTopOf="@id/jumpInButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <!-- CARD 1: Selezione della “vibe” -->
        <!-- Utente sceglie se ha un mood più “Party” o “Chill” tramite uno switch -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vibeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <!-- Contenuto interno della vibe card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Titolo della sezione -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quale Vibe / Mood sei?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Riga orizzontale con testo “Party” - Switch - testo “Chill” -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Etichetta per la modalità “Party” -->
                    <TextView
                        android:id="@+id/partyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <!-- Switch per cambiare tra “Party” e “Chill” -->
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/vibeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:checked="false"
                        app:thumbTint="@color/roamly_red"
                        app:trackTint="@color/gray" />

                    <!-- Etichetta per la modalità “Chill” -->
                    <TextView
                        android:id="@+id/chillText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chill"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 2: Selezione della visibilità -->
        <!-- Utente sceglie se vuole essere visibile sulla mappa tramite uno switch -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/visibilityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <!-- Contenuto interno della visibility card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Titolo della sezione -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vuoi essere visibile sulla mappa?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Riga orizzontale con testo “No” - Switch - testo “Yes” -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Etichetta per visibilità disattivata -->
                    <TextView
                        android:id="@+id/noText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="20sp"
                        android:textColor="@color/gray" />

                    <!-- Switch per attivare/disattivare visibilità -->
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/visibilitySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:checked="true"
                        app:thumbTint="@color/roamly_red"
                        app:trackTint="@color/gray" />

                    <!-- Etichetta per visibilità attiva -->
                    <TextView
                        android:id="@+id/yesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Pulsante finale per salvare le scelte e continuare -->
    <!-- Posto in fondo allo schermo, colorato e con testo centrato -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/jumpInButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:text="Jump in!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/roamly_red"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>