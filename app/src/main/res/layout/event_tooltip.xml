<!-- Tooltip evento: mostrato sopra il marker evento nella mappa -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventTooltipRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/callout_background"
    android:elevation="6dp"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp">

    <!-- Riga con tipo evento + data e ora -->
    <TextView
        android:id="@+id/txtEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party - 02/07/2025 21:00"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Descrizione breve dell'evento -->
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aperitivo"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp" />

    <!-- Testo partecipanti es: 2/6 partecipanti -->
    <TextView
        android:id="@+id/txtParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/6 partecipanti"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp" />

    <!-- Range età dei partecipanti -->
    <TextView
        android:id="@+id/txtAgeRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Età: 20 - 40"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp" />

    <!-- Container per le lingue (es. bandierine) -->
    <LinearLayout
        android:id="@+id/languagesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp" />

    <!-- Container per gli interessi (icone) -->
    <LinearLayout
        android:id="@+id/interestsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp" />

    <!-- Avatar dei partecipanti -->
    <LinearLayout
        android:id="@+id/avatarsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp" />

    <!-- Pulsanti dinamici: JOIN, DELETE, ecc. -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="end">

        <!-- Pulsante per unirsi all'evento -->
        <Button
            android:id="@+id/btnJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:backgroundTint="@color/roamly_red"
            android:textColor="@android:color/white"
            android:elevation="2dp" />

        <!-- Pulsante per eliminare l'evento (visibile solo per il creatore) -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:backgroundTint="@color/roamly_red"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
    </LinearLayout>
</LinearLayout>