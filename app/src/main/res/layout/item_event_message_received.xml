<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="start">

    <!-- Avatar visibile solo sul primo messaggio del gruppo -->
    <ImageView
        android:id="@+id/imageSenderAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:src="@drawable/default_avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/avatar_circle_background"
        android:contentDescription="Avatar del mittente" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nome mittente, visibile solo sul primo messaggio del gruppo -->
        <TextView
            android:id="@+id/textSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Mittente"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"/>

        <!-- Messaggio -->
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Messaggio ricevuto"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_received_message"/>

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:33"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>