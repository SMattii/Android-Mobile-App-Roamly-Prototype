<!-- Tooltip profilo utente: visualizzato sopra un marker sulla mappa -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/callout_background"
    android:elevation="6dp"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp">

    <!-- Nome e età dell’utente -->
    <TextView
        android:id="@+id/txtNameAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome, Età"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Sezione paese: bandiera + nome -->
    <LinearLayout
        android:id="@+id/countryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <!-- Bandiera del paese (inizialmente nascosta) -->
        <ImageView
            android:id="@+id/countryFlag"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone" />

        <!-- Nome del paese -->
        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="12sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Sezione categoria: icona + nome -->
    <LinearLayout
        android:id="@+id/categoryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical">

        <!-- Icona della categoria (es. local, tourist...) -->
        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone" />

        <!-- Nome della categoria -->
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="12sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Vibe dell’utente (es. chill, party) -->
    <TextView
        android:id="@+id/txtVibe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibe"
        android:textSize="12sp"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Contenitore lingue (es. bandierine) -->
    <LinearLayout
        android:id="@+id/languagesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp" />

    <!-- Contenitore interessi (es. icone) -->
    <LinearLayout
        android:id="@+id/interestsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp" />

</LinearLayout>